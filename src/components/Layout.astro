---
import { getCollection } from 'astro:content';
import { marked } from 'marked';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'PROCODE - Profesjonalne rozwiÄ…zania programistyczne' } = Astro.props;

const footerLinksData = await getCollection('footer-links');
const footerTextData = await getCollection('footer-text');

const footerLinks = footerLinksData[0]?.data.links || [];
const footerTextContent = footerTextData[0]?.data.content || '2025 PROCODE';
const footerTextHtml = typeof footerTextContent === 'string' ? marked(footerTextContent) : '';
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="page-wrapper">
      <header class="site-header">
        <div class="container">
          <nav class="main-nav">
            <div class="nav-brand">
              <a href="/" class="brand-link">
                <img src="/logo-procode.svg" alt="PROCODE" class="brand-logo" />
              </a>
            </div>
          </nav>
        </div>
      </header>

      <main class="main-content">
        <div class="container">
          <slot />
        </div>
      </main>

      <footer class="site-footer">
        <div class="container">
          <div class="footer-content">
            <div class="footer-links">
              {
                footerLinks.map((link) => (
                  <a
                    href={link.url}
                    class="footer-link"
                    target={link.external ? '_blank' : undefined}
                    rel={link.external ? 'noopener noreferrer' : undefined}
                  >
                    {link.text}
                  </a>
                ))
              }
            </div>
            <div class="footer-text" set:html={footerTextHtml} />
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  * {
    margin: 0;
    padding: 0;
  }

  body {
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
  }

  img,
  picture,
  video,
  canvas,
  svg {
    display: block;
    max-width: 100%;
  }

  input,
  button,
  textarea,
  select {
    font: inherit;
  }

  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
  }

  body {
    font-family:
      'Lato',
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      sans-serif;
    color: #1a1a1a;
    background: #c7c7c7 url('/bg.svg') no-repeat center center;
    background-size: cover;
    background-attachment: fixed;
    margin: 0;
    padding: 0;
  }

  .page-wrapper {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    max-width: 1200px;
    margin: 0 auto;
    background:
      url('/blu-background.svg') no-repeat center center,
      #1a1f36;
    background-size: cover;
    position: relative;
  }

  .container {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .site-header {
    background: #ffffff;
    border-bottom: 1px solid #e5e5e5;
    padding: 1rem 0;
  }

  .main-nav {
    display: flex;
    justify-content: space-between;
    align-items: left;
  }

  .brand-link {
    text-decoration: none;
    color: inherit;
  }

  .brand-logo {
    height: 40px;
    width: auto;
  }

  .main-content {
    flex: 1;
    padding: 2rem 0;
  }

  .site-footer {
    background: #1a1f36;
    border-top: 2px solid #10b981;
    padding: 3rem 0 2rem;
    margin-top: auto;
  }

  .site-footer .footer-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
    text-align: center;
  }

  .footer-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    justify-content: center;
  }

  .footer-link {
    color: #10b981;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: color 0.2s ease;
    border-bottom: 1px solid transparent;
  }

  .footer-link:hover {
    color: #10b981;
    border-bottom-color: #10b981;
  }

  .footer-text p {
    color: #e5e7eb;
    font-size: 0.85rem;
    margin: 0;
    line-height: 1.5;
  }

  .footer-text strong {
    color: #10b981;
    font-weight: 700;
  }

  .footer-text em {
    color: #fbbf24;
    font-style: italic;
  }

  .footer-text a {
    color: #e5e7eb;
    text-decoration: underline;
  }

  .footer-text a:hover {
    color: #10b981;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: #1a1a1a;
  }

  h2 {
    font-size: 2rem;
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: 0.875rem;
    color: #1a1a1a;
  }

  h3 {
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 0.75rem;
    color: #1a1a1a;
  }

  p {
    margin-bottom: 1rem;
    color: #4a4a4a;
  }

  @media (max-width: 968px) {
    .page-wrapper {
      max-width: 100%;
      margin: 0;
    }
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 0.75rem;
    }

    .brand-text {
      font-size: 1.25rem;
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.75rem;
    }

    h3 {
      font-size: 1.25rem;
    }

    .main-content {
      padding: 1.5rem 0;
    }

    .footer-links {
      gap: 1rem;
    }

    .site-footer {
      padding: 2rem 0 1.5rem;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 1.75rem;
    }
  }
</style>
