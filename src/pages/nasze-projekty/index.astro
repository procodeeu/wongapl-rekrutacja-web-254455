---
import { getCollection } from 'astro:content';
import Layout from '../../components/Layout.astro';

const allNews = await getCollection('ourProjects');
const publishedNews = allNews
  .filter(news => news.data.published)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

function formatDate(date: Date): string {
  return date.toLocaleDateString('pl-PL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout title="Nasze projekty - PROCODE" description="Zobacz wszystkie nasze zrealizowane projekty i case studies.">
  <div class="news-page">
    <div class="container">
      <header class="news-page-header">
        <h1>Nasze projekty</h1>
        <p>Poznaj nasze zrealizowane projekty i case studies</p>
      </header>

      <div class="news-list">
        {publishedNews.map((newsItem) => (
          <article class="news-item">
            <div class="news-item-content">
              <h2>
                <a href={`/nasze-projekty/${newsItem.slug}`}>{newsItem.data.title}</a>
              </h2>
              <time class="news-item-date">{formatDate(newsItem.data.date)}</time>
              <p class="news-item-description">{newsItem.data.description}</p>
              <a href={`/nasze-projekty/${newsItem.slug}`} class="read-more-btn">Czytaj więcej</a>
            </div>
          </article>
        ))}
      </div>


      {publishedNews.length === 0 && (
        <div class="no-news">
          <p>Brak projektów do wyświetlenia.</p>
        </div>
      )}
    </div>
  </div>
</Layout>

<style>
  .news-page {
    background: url('/bg.svg') no-repeat center center;
    background-size: cover;
    background-color: #1a1f36;
    min-height: 100vh;
    padding: 4rem 0;
    color: white;
  }

  .news-page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .news-page-header h1 {
    color: #fbbf24;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 700;
  }

  .news-page-header p {
    color: #e5e7eb;
    font-size: 1.125rem;
  }

  .news-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .news-item {
    background: rgba(26, 31, 54, 0.9);
    border-radius: 8px;
    backdrop-filter: blur(10px);
  }

  .news-item-content {
    padding: 2rem;
  }

  .news-item h2 {
    margin: 0 0 0.75rem 0;
  }

  .news-item h2 a {
    color: #fbbf24;
    text-decoration: none;
    transition: color 0.2s ease;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .news-item h2 a:hover {
    color: #10b981;
  }

  .news-item-date {
    color: #7dd3fc;
    font-size: 0.875rem;
    display: block;
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .news-item-description {
    color: #e5e7eb;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .read-more-btn {
    background: #10b981;
    color: #1a1f36;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.875rem;
    letter-spacing: 0.5px;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .read-more-btn:hover {
    background: #fbbf24;
    transform: translateY(-1px);
  }


  .no-news {
    text-align: center;
    padding: 4rem 2rem;
    color: #e5e7eb;
  }

  @media (max-width: 768px) {
    .news-page {
      padding: 2rem 0;
    }

    .news-page-header {
      margin-bottom: 3rem;
    }

    .news-item-content {
      padding: 1.5rem;
    }

  }
</style>