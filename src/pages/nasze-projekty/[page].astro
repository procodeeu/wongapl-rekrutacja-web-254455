---
import { getCollection } from 'astro:content';
import Layout from '../../components/Layout.astro';

export async function getStaticPaths() {
  const allNews = await getCollection('ourProjects');
  const publishedNews = allNews.filter((news) => news.data.published);

  const ITEMS_PER_PAGE = 3;
  const totalPages = Math.ceil(publishedNews.length / ITEMS_PER_PAGE);

  return Array.from({ length: totalPages }, (_, i) => ({
    params: { page: String(i + 1) },
  }));
}

const allNews = await getCollection('ourProjects');
const publishedNews = allNews
  .filter((news) => news.data.published)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());

const ITEMS_PER_PAGE = 3;
const currentPage = Number(Astro.params.page) || 1;
const totalPages = Math.ceil(publishedNews.length / ITEMS_PER_PAGE);

if (currentPage < 1 || currentPage > totalPages) {
  return Astro.redirect('/nasze-projekty/1');
}

const startIndex = (currentPage - 1) * ITEMS_PER_PAGE;
const endIndex = startIndex + ITEMS_PER_PAGE;
const paginatedNews = publishedNews.slice(startIndex, endIndex);

function formatDate(date: Date): string {
  return date.toLocaleDateString('pl-PL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<Layout
  title="Nasze projekty - PROCODE"
  description="Zobacz wszystkie nasze zrealizowane projekty i case studies."
>
  <div class="news-page">
    <div class="container">
      <header class="news-page-header">
        <h1>Nasze projekty</h1>
        <p>Poznaj nasze zrealizowane projekty i case studies</p>
      </header>

      <div class="news-list">
        {
          paginatedNews.map((newsItem) => (
            <article class="news-item">
              <div class="news-item-content">
                <h2>
                  <a href={`/nasze-projekty/${newsItem.slug}`}>{newsItem.data.title}</a>
                </h2>
                <time class="news-item-date">{formatDate(newsItem.data.date)}</time>
                <p class="news-item-description">{newsItem.data.description}</p>
                <a href={`/nasze-projekty/${newsItem.slug}`} class="read-more-btn">
                  Czytaj więcej
                </a>
              </div>
            </article>
          ))
        }
      </div>

      {
        totalPages > 1 && (
          <nav class="pagination" aria-label="Paginacja projektów">
            {currentPage > 1 && (
              <a href={`/nasze-projekty/${currentPage - 1}`} class="pagination-link">
                ← Poprzednia strona
              </a>
            )}

            <div class="pagination-numbers">
              {Array.from({ length: totalPages }, (_, i) => i + 1).map((page) =>
                page === currentPage ? (
                  <span class="pagination-current" aria-current="page">
                    {page}
                  </span>
                ) : (
                  <a href={`/nasze-projekty/${page}`} class="pagination-link pagination-number">
                    {page}
                  </a>
                ),
              )}
            </div>

            {currentPage < totalPages && (
              <a href={`/nasze-projekty/${currentPage + 1}`} class="pagination-link">
                Następna strona →
              </a>
            )}
          </nav>
        )
      }

      {
        paginatedNews.length === 0 && (
          <div class="no-news">
            <p>Brak projektów do wyświetlenia.</p>
          </div>
        )
      }
    </div>
  </div>
</Layout>

<style>
  .news-page {
    background: url('/bg.svg') no-repeat center center;
    background-size: cover;
    background-color: #1a1f36;
    min-height: 100vh;
    padding: 4rem 0;
    color: white;
  }

  .news-page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .news-page-header h1 {
    color: #fbbf24;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 700;
  }

  .news-page-header p {
    color: #e5e7eb;
    font-size: 1.125rem;
  }

  .news-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .news-item {
    background: rgba(26, 31, 54, 0.9);
    border-radius: 8px;
    backdrop-filter: blur(10px);
  }

  .news-item-content {
    padding: 2rem;
  }

  .news-item h2 {
    margin: 0 0 0.75rem 0;
  }

  .news-item h2 a {
    color: #fbbf24;
    text-decoration: none;
    transition: color 0.2s ease;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .news-item h2 a:hover {
    color: #10b981;
  }

  .news-item-date {
    color: #7dd3fc;
    font-size: 0.875rem;
    display: block;
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .news-item-description {
    color: #e5e7eb;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .read-more-btn {
    background: #10b981;
    color: #1a1f36;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.875rem;
    letter-spacing: 0.5px;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .read-more-btn:hover {
    background: #fbbf24;
    transform: translateY(-1px);
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 3rem;
  }

  .pagination-numbers {
    display: flex;
    gap: 0.5rem;
  }

  .pagination-link,
  .pagination-current {
    padding: 0.75rem 1rem;
    border: 2px solid #10b981;
    border-radius: 0;
    text-decoration: none;
    color: #e5e7eb;
    background: rgba(26, 31, 54, 0.8);
    transition: all 0.2s ease;
    font-weight: 600;
  }

  .pagination-number {
    width: 44px;
    text-align: center;
  }

  .pagination-link:hover {
    background: #10b981;
    color: #1a1f36;
    transform: translateY(-1px);
  }

  .pagination-current {
    background: #fbbf24;
    color: #1a1f36;
    border-color: #fbbf24;
  }

  .no-news {
    text-align: center;
    padding: 4rem 2rem;
    color: #e5e7eb;
  }

  @media (max-width: 768px) {
    .news-page {
      padding: 2rem 0;
    }

    .news-page-header {
      margin-bottom: 3rem;
    }

    .news-item-content {
      padding: 1.5rem;
    }

    .pagination {
      flex-direction: column;
      gap: 1rem;
    }

    .pagination-numbers {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
